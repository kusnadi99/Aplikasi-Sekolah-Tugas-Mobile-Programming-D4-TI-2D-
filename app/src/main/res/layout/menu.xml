<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nama_app"
        android:textSize="20sp"
        android:text="Aplikasi Sekolah"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Data Guru"
        android:id="@+id/button_tambah_guru"
        android:layout_below="@+id/nama_app"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Data Siswa"
        android:id="@+id/button_tambah_siswa"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/button_tambah_guru"
        android:layout_alignLeft="@+id/button_tambah_guru"
        android:layout_alignStart="@+id/button_tambah_guru" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Data Peralatan"
        android:id="@+id/button_tambah_peralatan"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/button_view_siswa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Data Guru"
        android:id="@+id/button_view_guru"
        android:layout_below="@+id/button_tambah_guru"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Data Siswa"
        android:id="@+id/button_view_siswa"
        android:layout_below="@+id/button_tambah_siswa"
        android:layout_alignLeft="@+id/button_view_guru"
        android:layout_alignStart="@+id/button_view_guru" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Data Peralatan"
        android:id="@+id/button_view_peralatan"
        android:layout_below="@+id/button_tambah_peralatan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah User"
        android:id="@+id/button_tambah_user"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/button_view_peralatan"
        android:layout_alignRight="@+id/button_tambah_siswa"
        android:layout_alignEnd="@+id/button_tambah_siswa" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Data User"
        android:id="@+id/button_view_user"
        android:layout_alignTop="@+id/button_tambah_user"
        android:layout_toRightOf="@+id/button_tambah_peralatan"
        android:layout_toEndOf="@+id/button_tambah_peralatan" />

</RelativeLayout>